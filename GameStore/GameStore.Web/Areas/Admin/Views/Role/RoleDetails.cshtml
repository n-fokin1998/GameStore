@model GameStore.BusinessLogicLayer.DTO.RoleDTO

@{
    ViewBag.Title = GlobalRes.RoleDetails;
}

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
<div class="p-3 content col-lg-9">
    <div class="page-head">
        <div class="page-head__title float-left"><h2>@GlobalRes.RoleDetails</h2></div>
        <div class="page-head__content float-right">
            @Html.ActionLink(GlobalRes.Edit, "EditRole", new {Id = Model.Id, controller = "Role" }) |
            @Html.ActionLink(GlobalRes.Delete, "DeleteRole", new {Id = Model.Id, controller = "Role" }, new {@class = "link-admin--delete"})
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="horizontal-line"></div><br /><br />
    <span class="font-weight-bold">Id: </span>@Model.Id<br /><br />
    <span class="font-weight-bold">@GlobalRes.Role: </span>  @Model.Name<br /><br />
</div>
<div class="side col-lg-3"></div>

@section Scripts {
    @Scripts.Render("~/Scripts/admin-panel-script.js")
}