@model GameStore.Web.ViewModels.Account.LoginViewModel

@{
    ViewBag.Title = GlobalRes.LogIn;
}

<div class="p-3 content col-lg-9">
    <div class="page-head">
        <div class="page-head__title float-left"><h2>@GlobalRes.LogIn</h2></div>
        <div class="clearfix"></div>
    </div>
    <div class="horizontal-line"></div><br /><br />
     <div class="row p-4">
        <div class="col-lg-4">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-group" }))
            {
                @Html.LabelFor(Model => Model.Email)<br />
                @Html.EditorFor(Model => Model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(Model => Model.Email)<br /><br />
                @Html.LabelFor(Model => Model.Password)<br />
                @Html.EditorFor(Model => Model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(Model => Model.Password)<br /><br />
                <input type="submit" value="@GlobalRes.LogIn" class="custom-btn" />
            }
        </div>
    </div>
</div>
<div class="side col-lg-3"></div>